<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Comment">
    <select id="findAll" parameterType="Long" resultType="comment">
        select * from comment_Gym where boardId=#{boardId} order by id desc
    </select>

    <insert id="save" parameterType="comment">
        insert into comment_Gym(commentWriter,commentContents,commentCreatedDate,boardId)
        values (#{commentWriter},#{commentContents},now(),#{boardId})
    </insert>
</mapper>