<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Board">
    <insert id="saveFile" parameterType="board">
    insert into board_Gym
        (boardWriter,boardPassword,boardTitle,boardContents,boardCreatedDate,boardFileName)
        values (#{boardWriter},#{boardPassword},#{boardTitle},#{boardContents},now(),#{boardFileName})
    </insert>

    <select id="pagingList" parameterType="java.util.HashMap" resultType="board">
        select * from board_Gym order by id desc limit #{start}, #{limit}
    </select>

    <select id="count" resultType="int">
        select count(id) from board_Gym
    </select>

    <update id="updateHits" parameterType="Long">
        update board_Gym set boardHits = boardHits+1 where id=#{id}
    </update>

    <select id="findById" parameterType="Long" resultType="board">
        select * from board_Gym  where id=#{id}
    </select>
</mapper>